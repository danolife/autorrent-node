<h1>Welcome to Autorrent</h1>
{{#if user}}
  Welcome {{user.name}}
  <a href="/logout">Logout</a>
{{else}}
  <a href="/auth/tvst">Log in</a>
{{/if}}

<ul>
  {{#each episodes}}
    <li>
      {{show.name}} S{{season_number}}E{{number}}: {{name}}
      /
      {{#if extraResult}}
        <a href="{{extraResult.link}}">{{extraResult.name}}</a> ({{extraResult.size}})
      {{else}}
        No torrent available
      {{/if}}
    </li>
  {{/each}}
</ul>
